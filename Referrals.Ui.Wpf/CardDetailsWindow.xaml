<Window x:Class="Referrals.Ui.Wpf.CardDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Referrals.Ui.Wpf"
        mc:Ignorable="d"
        Title="Referral Details" Height="300" Width="400">
    <Grid Background="{DynamicResource BackdropBrush}">
        
        <TextBlock Text="{Binding ParentLastName}" FontSize="24" Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
    <TextBlock Text="{Binding Comment}" Foreground="{DynamicResource ForegroundBrush}" TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding ReferralDate, StringFormat='yyyy-MM-dd'}" FontSize="16" Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
