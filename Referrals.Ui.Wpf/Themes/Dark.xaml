<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackdropColor">#1A1A1A</Color>
    <Color x:Key="BackgroundColor">#333333</Color>
    <Color x:Key="ForegroundColor">#FFFFFF</Color>

    <SolidColorBrush x:Key="BackdropBrush" Color="{StaticResource BackdropColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>

    <!-- Define other styles and resources for the dark theme -->
</ResourceDictionary>